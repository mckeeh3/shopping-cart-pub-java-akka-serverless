
### For use with VSCode Rest Client extension

# @urlPrefix = https://billowing-wind-7276.us-east1.akkaserverless.app
@urlPrefix = http://localhost:9000
@customerId = customer-1
@cartId = cart-1
@productId = product-1
@productName = product name 1
@quantity = 1

### cartve.action.ShoppingCartVeToTopic.AddItem

curl -XPOST -d '{
  "cart_id": "{{cartId}}",
  "customer_id": "{{customerId}}",
  "product_id": "{{productId}}",
  "name": "{{productName}}",
  "quantity": {{quantity}}
}' {{urlPrefix}}/ve/cart/{{cartId}}/items/add -H "Content-Type: application/json"

### cartese.action.ShoppingCartEseTopicOut.ChangeItem

curl -XPUT -d '{
  "cart_id": "{{cartId}}",
  "product_id": "{{productId}}",
  "quantity": {{quantity}}
}' {{urlPrefix}}/ve/cart/{{cartId}}/items/{{productId}}/change -H "Content-Type: application/json"

### cartese.action.ShoppingCartEseTopicOut.CheckoutCart

curl -XPUT -d '{
  "cart_id": "{{cartId}}"
}' {{urlPrefix}}/ve/cart/{{cartId}}/checkout -H "Content-Type: application/json"

### cartve.action.ShoppingCartVeToTopic.RemoveCart

curl -XPUT -d '{
  "cart_id": "{{cartId}}"
}' {{urlPrefix}}/ve/carts/{{cartId}}/remove -H "Content-Type: application/json"

### cartve.action.ShoppingCartVeToTopic.RemoveItem

curl -XPUT -d '{
  "cart_id": "{{cartId}}",
  "product_id": "{{productId}}"
}' {{urlPrefix}}/ve/cart/{{cartId}}/items/{{productId}}/remove -H "Content-Type: application/json"
